{
  "name": "Refined Mapy.cz",
  "manifest_version": 2,
  "description": "Mapy.cz tweaks",
  "homepage_url": "https://github.com/strajk/refined-mapy.cz",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "https://*.mapy.cz/*"
  ],
  "web_accessible_resources": ["injected.js"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://*.mapy.cz/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
